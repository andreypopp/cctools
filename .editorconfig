# EditorConfig for cctools
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Bash scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

[{bin/*,test/run-tests,test/nvim-test}]
indent_style = space
indent_size = 2

# Lua files
[*.lua]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files (GitHub Actions)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
